<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    android:layout_margin="5dp">

    <LinearLayout
        style="@style/FieldLinearVertical"
        android:layout_height="wrap_content">


        <LinearLayout
            style="@style/FieldLinear">

            <TextView
                style="@style/FieldLabel"
                android:text="Printer ID : "
                />

            <EditText
                android:id="@+id/edit_printer_id3"
                style="@style/FieldValue"
                android:hint="Printer ID"
                />

        </LinearLayout>

        <LinearLayout
            style="@style/FieldLinear">

            <TextView
                style="@style/FieldLabel"
                android:text="Job ID : "
                />

            <EditText
                android:id="@+id/edit_job_id"
                style="@style/FieldValue"
                android:hint="Job ID"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/button_command_resume_job"
                style="@style/SampleButton"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:src="@drawable/play"
                android:text="@string/printer_command_send_resume" />

            <ImageButton
                android:id="@+id/button_command_pause_job"
                style="@style/SampleButton"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:src="@drawable/pause"
                android:text="@string/printer_command_send_pause" />

            <ImageButton
                android:id="@+id/button_command_cancel_job"
                style="@style/SampleButton"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:src="@drawable/stop"

                android:text="@string/printer_command_send_cancel" />

        </LinearLayout>


        <EditText
            android:id="@+id/text_command_send_result"
            style="@style/SampleEditText"
            android:text=""
            android:hint="Result"
            android:background="@android:color/transparent"
            />



    </LinearLayout>

</android.support.v7.widget.CardView>
