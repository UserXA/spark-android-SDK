<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    android:layout_margin="5dp">

    <LinearLayout
        style="@style/FieldLinearVertical"
        android:layout_height="wrap_content">


        <LinearLayout
            style="@style/FieldLinear">

            <TextView
                style="@style/FieldLabel"
                android:text="Access Token "
                />

            <EditText
                android:id="@+id/edit_session_access_token"
                style="@style/FieldValue"
                android:hint="Access Token"
                android:focusable="false"
                android:focusableInTouchMode="false"
                />

        </LinearLayout>
        <LinearLayout
            style="@style/FieldLinear">

            <TextView
                style="@style/FieldLabel"
                android:text="Refresh Token "
                />

            <EditText
                android:id="@+id/edit_session_refresh_token"
                style="@style/FieldValue"
                android:hint="Refresh Token"
                android:focusable="false"
                android:lines="2"
                android:focusableInTouchMode="false"
                />

        </LinearLayout>

        <LinearLayout
            style="@style/FieldLinear">

            <TextView
                style="@style/FieldLabel"
                android:text="Access Token Type "
                />

            <EditText
                android:id="@+id/edit_session_access_type"
                style="@style/FieldValue"
                android:hint="Access Token Type"
                android:focusable="false"
                android:focusableInTouchMode="false"
                />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>