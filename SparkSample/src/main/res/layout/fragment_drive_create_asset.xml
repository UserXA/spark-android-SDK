<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<ScrollView
    android:layout_width="match_parent"
    android:layout_above="@+id/card_view_asset_create"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.autodesk.spark.sdk.example.MainActivity">

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/card_view_asset_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            card_view:cardCornerRadius="4dp"
            android:layout_margin="5dp">

           <LinearLayout
               style="@style/FieldLinear">

               <TextView
                    style="@style/FieldLabel"
                    android:text="Asset Name : "
                   />

               <EditText
                  android:id="@+id/edit_asset_name"
                  style="@style/FieldValue"
                  android:hint="Asset Name"
                   />

           </LinearLayout>


        </android.support.v7.widget.CardView>




        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/card_view_asset_description"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            card_view:cardCornerRadius="4dp"
            android:layout_margin="5dp">

            <LinearLayout
                style="@style/FieldLinear">


            <TextView
                    style="@style/FieldLabel"
                    android:text="Asset Description : "
                    />

                <EditText
                    android:id="@+id/edit_asset_description"
                    style="@style/FieldValue"
                    android:hint="Asset Description"
                    />

            </LinearLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/card_view_asset_tags"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            card_view:cardCornerRadius="4dp"
            android:layout_margin="5dp">

            <LinearLayout
                style="@style/FieldLinear">

            <TextView
                    style="@style/FieldLabel"
                    android:text="Asset Tags : "
                    />

                <EditText
                    android:id="@+id/edit_asset_tags"
                    style="@style/FieldValue"
                    android:hint="Asset Tags"
                    />

            </LinearLayout>


        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/card_view_asset_result"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            card_view:cardCornerRadius="4dp"
            card_view:cardBackgroundColor="#ffeeeeee"
            android:layout_margin="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffcc0000"
                android:textColor="@color/white_light"
                android:text="Result"
                android:textSize="16sp"
                android:layout_gravity="center_horizontal"
                />


            <LinearLayout
                style="@style/FieldLinear"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/text_create_asset_result"
                    style="@style/FieldLabelResult"
                    android:layout_marginTop="20dp"
                    android:text=""
                    android:hint="Result"
                    />



            </LinearLayout>


        </android.support.v7.widget.CardView>


    </LinearLayout>
</ScrollView>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view_asset_create"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        card_view:cardCornerRadius="4dp"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/activity_vertical_margin"
        android:layout_margin="10dp">

        <Button
            android:id="@+id/button_create_asset"
            style="@style/SampleButton"
            android:textSize="30sp"
            android:text="@string/create_asset" />

        </android.support.v7.widget.CardView>

</RelativeLayout>
