<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    android:layout_margin="5dp">

    <LinearLayout
        style="@style/FieldLinearVertical"
        android:layout_height="wrap_content">

        <LinearLayout
            style="@style/FieldLinear">

            <TextView
                style="@style/FieldLabel"
                android:text="member ID : "
                />

            <EditText
                android:id="@+id/edit_member_id"
                style="@style/FieldValue"
                android:hint="Member ID"
                />

        </LinearLayout>

        <Button
            android:id="@+id/button_get_member_assets"
            style="@style/SampleButton"
            android:text="@string/get_member_assets" />

        <EditText
            android:id="@+id/text_member_asssets_result"
            style="@style/SampleEditText"
            android:lines="10"
            />



    </LinearLayout>

</android.support.v7.widget.CardView>