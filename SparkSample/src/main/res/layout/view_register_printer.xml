<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    android:layout_margin="5dp">

    <LinearLayout
        style="@style/FieldLinearVertical"
        android:layout_height="wrap_content">


        <LinearLayout
            style="@style/FieldLinear">

            <TextView
                style="@style/FieldLabel"
                android:text="Registration Code : "
                />

            <EditText
                android:id="@+id/edit_registration"
                style="@style/FieldValue"
                android:hint="Registration Code"
                />

        </LinearLayout>

        <LinearLayout
            style="@style/FieldLinear">

            <TextView
                style="@style/FieldLabel"
                android:text="Printer Name : "
                />

            <EditText
                android:id="@+id/edit_printer_name"
                style="@style/FieldValue"
                android:hint="Printer Name"
                />

        </LinearLayout>

        <Button
            android:id="@+id/button_register"
            style="@style/SampleButton"
            android:layout_height="50dp"
            android:text="@string/printer_register" />

        <EditText
            android:id="@+id/text_register_result"
            style="@style/SampleEditText"
            android:text=""
            android:hint="Result"
            android:background="@android:color/transparent"
            />



    </LinearLayout>

</android.support.v7.widget.CardView>
