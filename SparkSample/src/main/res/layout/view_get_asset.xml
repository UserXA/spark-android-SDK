<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    android:layout_margin="5dp">

    <LinearLayout
        style="@style/FieldLinearVertical"
        android:layout_height="wrap_content">


        <LinearLayout
            style="@style/FieldLinear">

            <TextView
                style="@style/FieldLabel"
                android:text="Asset ID : "
                />

            <EditText
                android:id="@+id/edit_asset__id"
                style="@style/FieldValue"
                android:hint="Asset ID"
                />

        </LinearLayout>


        <Button
            android:id="@+id/button_get_asset"
            style="@style/SampleButton"
            android:text="@string/get_asset" />

        <EditText
            android:id="@+id/text_asset_name"
            style="@style/SampleEditText" />



    </LinearLayout>

</android.support.v7.widget.CardView>