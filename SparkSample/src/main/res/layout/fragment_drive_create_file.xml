<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<ScrollView
    android:layout_width="match_parent"
    android:layout_above="@+id/card_view_asset_create"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.autodesk.spark.sdk.example.MainActivity">

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            card_view:cardCornerRadius="4dp"
            android:layout_margin="5dp">

            <LinearLayout
                style="@style/FieldLinear">


                <TextView
                    android:id="@+id/text_file_selected"
                    style="@style/FieldLabel"
                    android:text="Select File"
                    android:textStyle="bold"
                    />

                <Button
                    android:id="@+id/button_select_file"
                    style="@style/SampleButton"
                    android:layout_width="wrap_content"
                    android:textSize="20sp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textStyle="normal"
                    android:text="@string/select_file" />

            </LinearLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            card_view:cardCornerRadius="4dp"
            android:layout_margin="5dp">

           <LinearLayout
               style="@style/FieldLinear">

               <TextView
                    style="@style/FieldLabel"
                    android:text="Zip Enable"
                   />

               <Switch
                   android:id="@+id/switch_zip_enable"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />

           </LinearLayout>


        </android.support.v7.widget.CardView>




        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            card_view:cardCornerRadius="4dp"
            android:layout_margin="5dp">

            <LinearLayout
                style="@style/FieldLinear">


            <TextView
                    style="@style/FieldLabel"
                    android:text="Public"
                    />

                <Switch
                    android:id="@+id/switch_public"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>


        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/card_view_file_result"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            card_view:cardCornerRadius="4dp"
            card_view:cardBackgroundColor="#ffeeeeee"
            android:layout_margin="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffcc0000"
                android:textColor="@color/white_light"
                android:text="Result"
                android:textSize="16sp"
                android:layout_gravity="center_horizontal"
                />


            <LinearLayout
                style="@style/FieldLinear"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/text_create_file_result"
                    style="@style/FieldLabelResult"
                    android:layout_marginTop="20dp"
                    android:text=""
                    android:hint="Result"
                    />



            </LinearLayout>


        </android.support.v7.widget.CardView>


    </LinearLayout>
</ScrollView>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view_file_create"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        card_view:cardCornerRadius="4dp"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/activity_vertical_margin"
        android:layout_margin="10dp">

        <Button
            android:id="@+id/button_create_file"
            style="@style/SampleButton"
            android:textSize="30sp"
            android:text="@string/create_file" />

        </android.support.v7.widget.CardView>

</RelativeLayout>
